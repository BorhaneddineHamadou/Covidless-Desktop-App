{
  "name": "covidless",
  "version": "1.0.0",
  "description": "Une application desktop pour les centres de vaccination",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "package-mac": "electron-packager . --overwrite --platform=darwin --arch=x64 --icon=assets/icons/mac/icon.icns --prune=true --out=release-builds",
    "package-win": "electron-packager . CovidLess --overwrite --asar=true --platform=win32 --arch=ia32 --icon=assets/icons/win/icon.ico --prune=true --out=release-builds --version-string.CompanyName=CE --version-string.FileDescription=CE --version-string.ProductName=\"CovidLess\"",    
    "package-linux": "electron-packager . CovidLess --overwrite --asar=true --platform=linux --arch=x64 --icon=assets/icons/png/icon.png --prune=true --out=release-builds"
  },
  "author": "Borhaneddine Hamadou",
  "license": "ISC",
  "dependencies": {
    "electron": "^13.1.4"
  },
  "devDependencies": {
    "electron-packager": "^15.2.0"
  }
}
